@{
    ViewData["Title"] = "Ad";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt_br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    
    <title>Páginas Amarelas</title>

    <link rel="shortcut icon" href="~/img/favicon.ico" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bootstrap.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/font-awesome.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/ad.css" type="text/css" asp-append-version="true"> 
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" asp-append-version="true">
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-custom">
  
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="@Url.Action("login", "Home")">
                    <img class="logo" src="~/img/Logo_PA.svg" alt="Logotipo">
                    <!--<i class="fa fa-bicycle"></i>  <span class="light">Páginas</span> Amarelas -->
                </a>
            </div>


            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">

                    <li class="hidden">
                        <a href="@Url.Action("login", "Home")"></a>
                    </li>
                    <li class="page-scroll login-btn">
                        <a href="@Url.Action("ad", "Home")">Anunciar</a>
                    </li>                    
                    <li class="page-scroll login-btn">
                        <a href="@Url.Action("profile", "Home")">Perfil</a>
                    </li>
                    <li class="page-scroll login-btn">
                        <a href="@Url.Action("Index", "Home")">Sair</a>
                    </li>



                </ul>
            </div>

        </div>

    </nav>


    <section id="profile" class="profile-section container">

        <div class="container-xl px-4 mt-4">
            <div class="row">
                <div class="col-xl-4">
                    <div class="prof mb-4 mb-xl-0">
                        <div class="prof-header">Imagem</div>
                        <div class="prof-body text-center">
                            <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                            <!-- Profile picture help block-->
                            <div class="small font-italic text-muted mb-4">JPG ou PNG menor que 2MB</div>
                            <!-- Profile picture upload button-->
                            <button class="btn btn-primary btn-image" type="button">Trocar imagem</button>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8">
                    <!-- Account details prof-->
                    <div class="prof mb-4">
                        <div class="prof-header">Detalhes do Anúncio</div>
                        <div class="prof-body">
                            <form>

                                <div class="row gx-3 mb-3">
                                    <div class="col-md-8">
                                        <label class="small mb-1" for="inputUsername">Título</label>
                                        <input class="form-control" id="inputUsername" type="text" placeholder="Digite o título do serviço">
                                    </div>
                                    <div class="col-md-8">
                                        <label class="small mb-1" for="inputUsername">Categoria</label>
                                        <select name="sources" id="categorias" class="form-control-select" placeholder="Source Type">
                                            <option value="categorias"></option>
                                            <option value="word">Word</option>
                                            <option value="hashtag">Hashtag</option>
                                         </select>
                                    </div>
                                </div>        

                                <div class="mb-3">
                                    <label class="small mb-1" for="inputUsername">Descrição</label>
                                    <input class="form-control" id="inputUsername" type="text" placeholder="Digite a descrição do serviço">
                                </div>

                                <div class="row gx-3 mb-3">

                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputOrgName">Estado</label>
                                        <select name="sources" id="estado" class="form-control-select" placeholder="Source Type">
                                            <option value="categorias"></option>
                                            <option value="word">Word</option>
                                            <option value="hashtag">Hashtag</option>
                                        </select>
                                    </div>
  
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputLocation">Cidade</label>
                                        <select name="sources" id="cidade" class="form-control-select" placeholder="Source Type">
                                            <option value="categorias"></option>
                                            <option value="word">Word</option>
                                            <option value="hashtag">Hashtag</option>
                                         </select>
                                    </div>
                                    
                                </div>
                                
                                <div class="mb-3">
                                    <label class="small mb-1" for="inputEmailAddress">Email</label>
                                    <input class="form-control" id="inputEmailAddress" type="email" placeholder="Digite o e-mail para contato" value="name@example.com">
                                </div>
                                <div class="row gx-3 mb-3">
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputPhone">Telefone</label>
                                        <input class="form-control" id="inputPhone" type="tel" placeholder="Informe o número de telefone com DDD">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="inputBirthday">WhatsApp</label>
                                        <input class="form-control" id="inputwhatsapp" type="text" name="whatsapp" placeholder="Informe o WhatsApp">
                                    </div>
                                <button class="btn btn-primary" type="button">Salvar</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    
    <dir class="fix-footer"> </dir>

    <footer id= "footer" class="brand">
        <a class="fa">
            <span class="light">© 2022 | <img class="logo" src="~/img/Logo_PA_footer.svg" alt="Logotipo">
        </a>
    </footer>



    <script src="~/js/jquery.js" ></script>
    <script src="~/js/bootstrap.js" ></script>
    <script src="~/js/jquery.easing.js" ></script>
    <script src="~/js/style.js" ></script>

</body>

</html>
