@model ProjectPI2.Models.usuario
@{
    ViewData["Title"] = "Cadastro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt_br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    
    <title>Procura Acha</title>
    <link rel="shortcut icon" href="~/img/favicon.ico" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bootstrap.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/font-awesome.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/profile.css" type="text/css" asp-append-version="true"> 
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" asp-append-version="true">
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-custom">
  
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="@Url.Action("index", "Home")">
                    <img class="logo" src="~/img/Logo_PA.svg" alt="Logotipo">
                </a>
            </div>


            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">

                    <li class="hidden">
                        <a href="@Url.Action("login", "Home")"></a>
                    <li class="page-scroll login-btn">
                        <a href="@Url.Action("Cadastro", "Cadastro")">Cadastrar</a>                        
                    </li>
                    <li class="page-scroll login-btn">
                        <a href="@Url.Action("login", "Home")">Entrar</a>                        
                    </li>


                </ul>
            </div>

        </div>

    </nav>


    <section id="profile" class="profile-section container">

        <div class="container-xl px-4 mt-4">
            <div class="row">
                <div class="col-xl-4">
                </div>
                <div class="col-xl-8">

                    <div class="prof mb-4">
                        <div class="prof-header">Detalhes da conta</div>
                        <div class="prof-body">
                            <form class="form-horizontal" asp-action="Salvar" asp-controller="Cadastro" method="post">
                                <input type="hidden" asp-for="id" value="0">
                                <div class="row gx-3 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="username" class="small mb-1" for="inputUsername">Nome de usuário</label>
                                        <input asp-for="username" class="form-control" id="inputUsername" type="text" placeholder="Digite o nome de usuário desejado">
                                        <span asp-validation-for="username"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="senha" class="small mb-1" for="imputPassword">Senha</label>
                                        <input type="password" asp-for="senha" class="form-control" id="imputPassword" minlength="8" placeholder="Senha com no mínimo 8 digitos" required autocomplete="new-password" >
                                        <span asp-validation-for="senha"></span>
                                    </div>
                                </div>                                
                                <div class="mb-3">
                                        <label asp-for="nome" class="small mb-1" for="inputFirstName">Nome Completo</label>
                                        <input asp-for="nome" class="form-control" id="inputName" type="text" placeholder="Digite seu nome completo">
                                        <span asp-validation-for="email"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="email" class="small mb-1" for="inputEmailAddress">E-mail</label>
                                    <input asp-for="email" class="form-control" id="inputEmailAddress" type="email" placeholder="name@example.com">
                                    <span asp-validation-for="email"></span>
                                </div>
                                <div class="row gx-3 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="endereco" class="small mb-1">Endereço</label>
                                        <input asp-for="endereco" class="form-control" placeholder="Digite o endereço">
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="cep" class="small mb-1">CEP</label>
                                        <input asp-for="cep" class="form-control" placeholder="Digite o CEP">
                                        <span asp-validation-for="cep"></span>
                                    </div>
                                </div>   

                                <div class="row gx-3 mb-3">
                                    <label hidden>
                                        <select hidden id="pais">Brasil</select>
                                    </label>
                                    <div class="col-md-6">
                                        <label id="campo_estado" asp-for="estado" class="small mb-1" for="inputOrgName">
                                            Estado
                                            <select id="estado"asp-for="estado" class="form-control-select"></select>
                                        </label>
                                    </div>
                                    <div class="col-md-6">
                                        <label id="campo_cidade" asp-for="cidade" class="small mb-1" for="inputLocation">
                                            Cidade
                                            <select id="cidade" asp-for="cidade" class="form-control-select"></select>
                                        </label>
                                    </div>
                                </div>

                                <div class="row gx-3 mb-3">
                                    <div class="col-md-6">
                                        <input type="radio" asp-for="pjuridica" id="sim" value="true">
                                        <label class="small mb-1" id="inputCNPJ" for="inputCNPJ">Pessoa Jurídica</label>
                                        <input asp-for="cnpj" disabled placeholder="Sem traços ou pontos" class="form-control" cnpj="cnpj">
                                        <span asp-validation-for="cnpj"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="radio" asp-for="pjuridica" id="nao" value="false">
                                        <label class="small mb-1" id="inputCPF" for="inputCPF">Pessoa Física</label>
                                        <input asp-for="cpf" disabled placeholder="Sem traços ou pontos" class="form-control" id="cpf"> 
                                        <span asp-validation-for="cnpj"></span>
                                    </div>
                                </div>  
                                <div class="row gx-3 mb-3">
                                    <button id="" class="btn btn-success">Salvar</button>
                                </div>
                                </form>
                                
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    
    <dir class="fix-footer"> </dir>

    <footer id= "footer" class="brand">
        <a class="fa">
            <span class="light">2022 | <img class="logo" src="~/img/Logo_PA_footer.svg" alt="Logotipo">
        </a>
    </footer>

        @* SCRIPT QUE HABILITA INPUT DE CPF OU CNPJ DE ACORDO COM SELEÇÃO DO RADIO *@
        <script>
        window.onload = () => {
        var inputCNPJ = document.getElementById('cnpj');
        var inputCPF = document.getElementById('cpf');
        var radio_cnpjYes = document.getElementById('sim');
        var radio_cnpjNo = document.getElementById('nao');
            radio_cnpjYes.addEventListener('click', (e) => {
                var radio = e.currentTarget;
                if(radio.checked == true) {
                inputCNPJ.disabled=false;
                inputCPF.disabled=true;
                inputCNPJ.focus();
                }
            });
            radio_cnpjNo.addEventListener('click', (e) => {
                var radio = e.currentTarget;
                if(radio.checked == true) {
                inputCNPJ.value='';
                inputCNPJ.disabled=true;
                inputCPF.disabled=false;
                inputCPF.focus();
                }
            });
        }

    </script>

    <script src="@Url.Content("~/js/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/jquery.easing.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/style.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/locations.js")" type="text/javascript"></script>

</body>

</html>
